<style>
   .local-generic {
      max-width: 450px;
      padding: 10px;
      margin: 4rem auto;
      font-family: sans-serif;
      font-size: 13px;
   }
   .frame-color {
      padding: 10px;
      border: 1px solid #eaecef;
      border-radius: 5px;
      background-color: #f6f8fa;
   }
</style>

<div class="container local-generic">

   <!-- Titolo -->
   <div class="text-center">
      <h6 class="pt-3 text-muted">Aiutaci a migliorare il Portale</h6>
      <h1>Comunicazione utente</h1>
   </div>

   <!-- Form -->
   <form id="submit" method="post" action="/communic-external">
      <input type="text" name="_method" id="_method" hidden>

      <!-- Indirizzo e-mail & Frase di sicurezza -->
      <div class="form-group frame-color mt-3">
         <div>
            <label for="email" class="fw-bold">Indirizzo e-mail</label>
            <input class="form-control mt-1" type="email" name="email" id="email" placeholder="nome@example.com"
                   required>
            <div class="invalid-feedback">E' necessario specificare un indirizzo e-mail valido</div>
         </div>
         <div class="mt-3">
            <label for="question" class="fw-bold">Contenuto comunicazione</label>
            <textarea class="form-control mt-1" name="data" id="data" maxlength="1000" required></textarea>
         </div>
      </div>

      <!-- Pulsanti di comando -->
      <div class="mt-3 d-grid gap-2">
         <button type="button" class="btn btn-success" id="next">Procedi</button>
         <a href="/" class="btn btn-warning">Annulla</a>
      </div>
   </form>
</div>

<script src="js/hub/communic-external.js"></script>