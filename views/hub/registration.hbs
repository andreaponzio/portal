<style>
   .local-generic {
      max-width: 450px;
      padding: 10px;
      margin: 4rem auto;
      font-family: sans-serif;
      font-size: 13px;
   }
   .frame-color {
      padding: 10px;
      border: 1px solid #eaecef;
      border-radius: 5px;
      background-color: #f6f8fa;
   }
</style>

<div class="container local-generic">

   <!-- Titolo -->
   <div class="text-center">
      <h6 class="pt-3 text-muted">Unisciti al Portale</h6>
      <h1>Creazione nuovo utente</h1>
   </div>

   <!-- Form -->
   <form id="submit" method="post" action="/registration">

      <!-- Indirizzo e-mail & Frase di sicurezza -->
      <div class="form-group frame-color">
         <div>
            <label for="email" class="fw-bold">Indirizzo e-mail</label>
            <input class="form-control mt-1" type="email" name="email" id="email" placeholder="nome@example.com"
                   required value="andrea.ponzio@gmail.com">
            <div class="invalid-feedback" id="email_feedback"></div>
         </div>
         <div class="mt-3">
            <label for="name" class="fw-bold">Nome utente</label>
            <input type="text" class="form-control mt-1" name="name" id="name" maxlength="30" required>
            <div class="invalid-feedback">E' necessario specificare un nome utente (massimo 30 caratteri)</div>
         </div>
      </div>

      <!-- Password -->
      <div class="form-group frame-color mt-3">
         <div>
            <label for="password" class="fw-bold">Password</label>
            <input type="password" class="form-control mt-1" name="password" id="password" maxlength="20" required value="1234567890">
            <div class="invalid-feedback">E' necessario specificare una password (minimo 8 caratteri)</div>
         </div>
         <div class="mt-3">
            <label for="repassword" class="fw-bold">Ripeti password</label>
            <input type="password" class="form-control mt-1" name="repassword" id="repassword" maxlength="20" required value="1234567890">
            <div class="invalid-feedback">Le password non corrispondono</div>
         </div>
      </div>

      <!-- Frase di sicurezza -->
      <div class="form-group frame-color mt-3">
         <div>
            <label for="security" class="fw-bold">Frase di sicurezza</label>
            <input type="password" class="form-control mt-1" name="security" id="security" maxlength="30" required value="1234567890">
            <div class="invalid-feedback">E' necessario specificare una frase di sicurezza (minimo 10 car., massimo 30)</div>
         </div>
         <div class="mt-3">
            <label for="resecurity" class="fw-bold">Ripeti frase di sicurezza</label>
            <input type="password" class="form-control mt-1" name="resecurity" id="resecurity" maxlength="30" required value="1234567890">
            <div class="invalid-feedback">Le frasi di sicurezza non corrispondono</div>
         </div>
      </div>

      <!-- Pulsanti di comando -->
      <div class="mt-3 d-grid gap-2">
         <button type="button" class="btn btn-success" id="next">Registra</button>
         <a href="/" class="btn btn-warning">Annulla</a>
      </div>
   </form>

   <h1>{{message}}</h1>
</div>

<script src="js/hub/registration.js"></script>