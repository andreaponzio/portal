<style>
   .local-generic {
      max-width: 430px;
      padding: 10px;
      margin: 6rem auto;
      font-family: sans-serif;
      font-size: 13px;
   }

   .form-generic {
      padding: 10px;
      border: 1px solid #eaecef;
      border-radius: 5px;
      background-color: #f6f8fa;
   }

   .frame-color {
      padding: 10px;
      border: 1px solid #eaecef;
      border-radius: 5px;
      background-color: #f6f8fa;
   }
</style>

<div class="container local-generic">

   <!-- Titolo -->
   <div class="text-center">
      <h1>Nuova comunicazione</h1>
   </div>

   <!-- Form -->
   <form id="submit" method="post" action="/chat/new">
      <input type="text" name="_method" id="_method" hidden>

      <!-- Elenco possibili destinatari -->
      <div class="form-group frame-color">
         <label for="email" class="fw-bold">Destinatario</label>
         <select class="form-select mt-1" name="email" id="email">
            <option selected>Selezionare un destinatario</option>
            {{#each address}}
               <option value="{{this.email}}">{{this.email}}</option>
            {{/each}}
         </select>
      </div>

      <!-- Titolo -->
      <div class="form-group frame-color mt-3">
         <label for="title" class="fw-bold">Titolo</label>
         <input class="form-control mt-1" name="title" id="title" maxlength="30"></textarea>
      </div>

      <!-- Casella del testo da inviare -->
      <div class="form-group frame-color mt-3">
         <label for="data" class="fw-bold">Contenuto</label>
         <textarea class="form-control mt-1" name="data" id="data"></textarea>
      </div>

      <!-- Pulsanti di comando -->
      <div class="mt-3 d-grid gap-2">
         <button type="button" class="btn btn-success" id="next">Procedi</button>
         <a href="/chat" class="btn btn-warning">Annulla</a>
      </div>
   </form>
</div>

<script src="/js/chat/new.js"></script>
